{
  "info": {
    "name": "User API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api/v1"
    }
  ],
  "item": [
    {
      "name": "Test Connection",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/users/test"
      }
    },
    {
      "name": "Get All Users",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/users"
      }
    },
    {
      "name": "Create User",
      "request": {
        "method": "POST",
        "header": [{"key": "Content-Type", "value": "application/json"}],
        "url": "{{base_url}}/users",
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test User\",\n  \"profilePictureURL\": \"https://example.com/photo.jpg\"\n}"
        }
      }
    }
  ]
}